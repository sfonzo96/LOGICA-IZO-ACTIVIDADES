<Window x:Class="FrmAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_23_09_15_Actividad"
        mc:Ignorable="d"
        Title="FrmAlumnos" Height="450" Width="800">
    <Grid>
        <Button x:Name="BtnNewAlumno" Content="Agregar alumno" HorizontalAlignment="Left" Height="48" Margin="239,71,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:Name="BtnDeleteAlumno" Content="Eliminar alumno" HorizontalAlignment="Left" Height="48" Margin="418,71,0,0" VerticalAlignment="Top" Width="139"/>
        <DataGrid x:Name="DataGridAlumnos" AutoGenerateColumns="False" HorizontalAlignment="Center" Height="200" Margin="0,171,0,0" VerticalAlignment="Top" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Legajo" Binding="{Binding Legajo}" Foreground="Black"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Foreground="Black"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Foreground="Black"/>
                <DataGridTextColumn Header="Año" Binding="{Binding Año}" Foreground="Black"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
